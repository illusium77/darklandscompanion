<Window x:Class="DarklandsSaveGameEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DarklandsSaveGameEditor.Views"
        Title="{Binding Title}" Height="450" Width="550"
        Icon="../resources/gargoyle.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ToolBarPanel Grid.Row="0" Orientation="Horizontal">
            <!--<StackPanel>-->
                <Button Content="Load" Command="{Binding LoadCommand}" />
                <Button Content="Save" Command="{Binding SaveCommand}" />
            <!--</StackPanel>-->
        </ToolBarPanel>

        <views:SaveGameView Grid.Row="2" DataContext="{Binding SaveGameVm}" />
    </Grid>
</Window>

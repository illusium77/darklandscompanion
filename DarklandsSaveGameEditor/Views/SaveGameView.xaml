<UserControl x:Class="DarklandsSaveGameEditor.Views.SaveGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:DarklandsSaveGameEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <TabControl Visibility="{Binding Visibility}">
        <views:PartyTab DataContext="{Binding SaveGame.Header}" />
        
        <views:CharacterTab DataContext="{Binding CharacterAVm}" />
        <views:CharacterTab DataContext="{Binding CharacterBVm}" />
        <views:CharacterTab DataContext="{Binding CharacterCVm}" />
        <views:CharacterTab DataContext="{Binding CharacterDVm}" />
    </TabControl>
</UserControl>
